{
    "title": "SCNMS - Alarm Lifecycle Dashboard",
    "uid": "scnms-alarms",
    "tags": ["scnms", "alarms", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "annotations": {
      "list": [
        {
          "name": "Alarm Events",
          "datasource": "Prometheus",
          "enable": true,
          "iconColor": "red"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Active Alarms",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(scnms_alarm_status{status=\"raised\"} or scnms_alarm_status{status=\"acknowledged\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 5,
                  "color": "yellow"
                },
                {
                  "value": 10,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Critical Alarms",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(scnms_alarm_status{severity=\"critical\", status=~\"raised|acknowledged\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Unacknowledged Alarms",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(scnms_alarm_status{status=\"raised\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 3,
                  "color": "orange"
                },
                {
                  "value": 5,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Alarms Cleared (24h)",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(increase(scnms_alarm_cleared_total[24h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 5,
        "type": "piechart",
        "title": "Alarms by Severity",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "count by (severity) (scnms_alarm_status{status=~\"raised|acknowledged\"})",
            "refId": "A",
            "legendFormat": "{{severity}}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "pie"
        }
      },
      {
        "id": 6,
        "type": "piechart",
        "title": "Alarms by Status",
        "gridPos": {
          "x": 8,
          "y": 4,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "count by (status) (scnms_alarm_status)",
            "refId": "A",
            "legendFormat": "{{status}}"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "donut"
        }
      },
      {
        "id": 7,
        "type": "bargauge",
        "title": "Active Alarms by Device",
        "gridPos": {
          "x": 16,
          "y": 4,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "count by (device_name) (scnms_alarm_status{status=~\"raised|acknowledged\"})",
            "refId": "A",
            "legendFormat": "{{device_name}}"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 3,
                  "color": "yellow"
                },
                {
                  "value": 5,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Alarm Trend (Raised vs Cleared)",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(scnms_alarm_raised_total[5m])) * 300",
            "refId": "A",
            "legendFormat": "Raised"
          },
          {
            "expr": "sum(rate(scnms_alarm_cleared_total[5m])) * 300",
            "refId": "B",
            "legendFormat": "Cleared"
          },
          {
            "expr": "sum(rate(scnms_alarm_acknowledged_total[5m])) * 300",
            "refId": "C",
            "legendFormat": "Acknowledged"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "showPoints": "never"
            },
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Raised"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "red",
                    "mode": "fixed"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Cleared"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "green",
                    "mode": "fixed"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Acknowledged"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "fixedColor": "blue",
                    "mode": "fixed"
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 9,
        "type": "table",
        "title": "Recent Active Alarms",
        "gridPos": {
          "x": 0,
          "y": 20,
          "w": 24,
          "h": 10
        },
        "targets": [
          {
            "expr": "scnms_alarm_status{status=~\"raised|acknowledged\"}",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "severity"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "mappings",
                  "value": [
                    {
                      "type": "value",
                      "options": {
                        "critical": {
                          "color": "red"
                        },
                        "major": {
                          "color": "orange"
                        },
                        "minor": {
                          "color": "yellow"
                        },
                        "warning": {
                          "color": "blue"
                        }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true,
                "instance": true
              },
              "indexByName": {
                "device_name": 0,
                "alarm_id": 1,
                "title": 2,
                "severity": 3,
                "status": 4,
                "raised_at": 5
              }
            }
          }
        ]
      },
      {
        "id": 10,
        "type": "timeseries",
        "title": "Mean Time to Acknowledge (MTTA)",
        "gridPos": {
          "x": 0,
          "y": 30,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "avg(scnms_alarm_acknowledge_duration_seconds)",
            "refId": "A",
            "legendFormat": "MTTA (seconds)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 11,
        "type": "timeseries",
        "title": "Mean Time to Resolve (MTTR)",
        "gridPos": {
          "x": 12,
          "y": 30,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "avg(scnms_alarm_resolution_duration_seconds)",
            "refId": "A",
            "legendFormat": "MTTR (seconds)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "fillOpacity": 10
            }
          }
        }
      }
    ]
}
