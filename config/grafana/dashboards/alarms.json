{
  "title": "SCNMS - Alarm Lifecycle Dashboard",
  "uid": "scnms-alarms",
  "tags": [
    "scnms",
    "alarms",
    "monitoring"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h"
    ]
  },
  "annotations": {
    "list": [
      {
        "name": "Alarm Events",
        "datasource": "Prometheus",
        "enable": true,
        "iconColor": "red"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Active Alarms",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "count(scnms_alarm_status{status=\"raised\"} or scnms_alarm_status{status=\"acknowledged\"})",
          "refId": "A",
          "datasource": {
            "type": "grafana",
            "uid": "-- Grafana --"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 5,
                "color": "yellow"
              },
              {
                "value": 10,
                "color": "red"
              }
            ]
          },
          "decimals": 0,
          "noValue": "-"
        }
      },
      "datasource": {
        "type": "grafana",
        "uid": "-- Grafana --"
      }
    },
    {
      "id": 2,
      "type": "stat",
