    {
      "id": 5,
      "type": "piechart",
      "title": "Alarms by Severity",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 8,
        "h": 8
      },
      "targets": [
        {
          "expr": "count by (severity) (scnms_alarm_status{status=~\"raised|acknowledged\"})",
          "refId": "A",
          "legendFormat": "{{severity}}",
          "datasource": {
            "type": "grafana",
            "uid": "-- Grafana --"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
