          "noValue": "-",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      },
      "datasource": {
        "type": "grafana",
        "uid": "-- Grafana --"
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Device Availability Over Time",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 24,
        "h": 8
      },
      "targets": [
        {
          "expr": "count(scnms_device_status{status=\"up\"}) / count(scnms_device_status) * 100",
          "refId": "A",
          "legendFormat": "Availability %",
          "datasource": {
            "type": "grafana",
            "uid": "-- Grafana --"
