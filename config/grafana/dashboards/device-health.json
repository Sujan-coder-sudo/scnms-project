      "title": "Device Inventory & Status",
      "gridPos": {
        "x": 0,
        "y": 36,
        "w": 24,
        "h": 10
      },
      "targets": [
        {
          "expr": "scnms_device_status",
          "refId": "A",
          "format": "table",
          "instant": true,
          "datasource": {
            "type": "grafana",
            "uid": "-- Grafana --"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left"
          },
          "decimals": 0,
          "noValue": "-",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          },
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "status"
            },
            "properties": [
              {
                "id": "custom.displayMode",
                "value": "color-background"
              },
              {
                "id": "mappings",
                "value": [
                  {
                    "type": "value",
                    "options": {
                      "up": {
                        "color": "green",
                        "text": "UP"
                      },
                      "down": {
                        "color": "red",
                        "text": "DOWN"
                      },
                      "unknown": {
                        "color": "gray",
                        "text": "UNKNOWN"
                      }
                    }
                  }
                ]
              }
            ]
          }
        ]
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true,
              "instance": true
            },
            "indexByName": {
              "device_name": 0,
              "ip_address": 1,
              "vendor": 2,
              "model": 3,
              "status": 4,
              "location": 5
            }
          }
        }
      ],
      "datasource": {
        "type": "grafana",
        "uid": "-- Grafana --"
