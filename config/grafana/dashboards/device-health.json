    {
      "id": 4,
      "type": "gauge",
      "title": "Network Availability",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "count(scnms_device_status{status=\"up\"}) / count(scnms_device_status) * 100",
