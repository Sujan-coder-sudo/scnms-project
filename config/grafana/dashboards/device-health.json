{
  "title": "SCNMS - Device Health Dashboard",
  "uid": "scnms-device-health",
  "tags": [
    "scnms",
    "devices",
    "health",
    "monitoring"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "30s",
      "1m",
      "5m",
      "15m",
      "30m"
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Total Devices",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 4,
        "h": 4
      },
      "targets": [
        {
          "expr": "count(scnms_device_status)",
          "refId": "A",
          "datasource": {
            "type": "grafana",
            "uid": "-- Grafana --"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "blue"
              }
            ]
          },
          "decimals": 0,
          "noValue": "-"
        }
      },
      "datasource": {
        "type": "grafana",
        "uid": "-- Grafana --"
      }
    },
    {
      "id": 2,
