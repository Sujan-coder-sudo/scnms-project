{
    "title": "SCNMS - Network Utilization Dashboard",
    "uid": "scnms-utilization",
    "tags": ["scnms", "network", "utilization", "bandwidth"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "1m",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Total Network Bandwidth",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(rate(scnms_interface_bytes_total[5m])) * 8",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bps",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 800000000,
                  "color": "yellow"
                },
                {
                  "value": 900000000,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Peak Interface Utilization",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "max(scnms_interface_utilization_percent)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 70,
                  "color": "yellow"
                },
                {
                  "value": 90,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Total Packets/sec",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(rate(scnms_interface_packets_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "pps",
            "decimals": 0,
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Error Rate",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(rate(scnms_interface_errors_total[5m])) / sum(rate(scnms_interface_packets_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 0.5,
                  "color": "yellow"
                },
                {
                  "value": 1,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "Network Bandwidth Usage (Inbound vs Outbound)",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(scnms_interface_rx_bytes_total[5m])) by (device_name) * 8",
            "refId": "A",
            "legendFormat": "{{device_name}} - RX"
          },
          {
            "expr": "sum(rate(scnms_interface_tx_bytes_total[5m])) by (device_name) * 8 * -1",
            "refId": "B",
            "legendFormat": "{{device_name}} - TX"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 30,
              "showPoints": "never",
              "axisPlacement": "auto"
            },
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["mean", "max", "last"]
          }
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "Interface Utilization by Device",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "scnms_interface_utilization_percent",
            "refId": "A",
            "legendFormat": "{{device_name}} - {{interface_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "showPoints": "never"
            },
            "color": {
              "mode": "palette-classic"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "transparent"
                },
                {
                  "value": 80,
                  "color": "yellow"
                },
                {
                  "value": 90,
                  "color": "red"
                }
              ]
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 7,
        "type": "heatmap",
        "title": "Interface Utilization Heatmap",
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "scnms_interface_utilization_percent",
            "refId": "A",
            "format": "time_series"
          }
        ],
        "options": {
          "calculate": true,
          "color": {
            "mode": "spectrum",
            "scheme": "Spectral"
          }
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Packet Rate by Device",
        "gridPos": {
          "x": 0,
          "y": 20,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(scnms_interface_rx_packets_total[5m])) by (device_name)",
            "refId": "A",
            "legendFormat": "{{device_name}} - RX"
          },
          {
            "expr": "sum(rate(scnms_interface_tx_packets_total[5m])) by (device_name)",
            "refId": "B",
            "legendFormat": "{{device_name}} - TX"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "pps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "showPoints": "never"
            },
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["mean", "max"]
          }
        }
      },
      {
        "id": 9,
        "type": "timeseries",
        "title": "Network Errors and Discards",
        "gridPos": {
          "x": 12,
          "y": 20,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(scnms_interface_rx_errors_total[5m])) by (device_name)",
            "refId": "A",
            "legendFormat": "{{device_name}} - RX Errors"
          },
          {
            "expr": "sum(rate(scnms_interface_tx_errors_total[5m])) by (device_name)",
            "refId": "B",
            "legendFormat": "{{device_name}} - TX Errors"
          },
          {
            "expr": "sum(rate(scnms_interface_rx_discards_total[5m])) by (device_name)",
            "refId": "C",
            "legendFormat": "{{device_name}} - RX Discards"
          },
          {
            "expr": "sum(rate(scnms_interface_tx_discards_total[5m])) by (device_name)",
            "refId": "D",
            "legendFormat": "{{device_name}} - TX Discards"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "showPoints": "auto"
            },
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 10,
        "type": "bargauge",
        "title": "Top 10 Interfaces by Bandwidth",
        "gridPos": {
          "x": 0,
          "y": 28,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "topk(10, sum(rate(scnms_interface_bytes_total[5m])) by (device_name, interface_name) * 8)",
            "refId": "A",
            "legendFormat": "{{device_name}}/{{interface_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bps",
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      },
      {
        "id": 11,
        "type": "table",
        "title": "Interface Status Summary",
        "gridPos": {
          "x": 12,
          "y": 28,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "scnms_interface_status",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "status"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "mappings",
                  "value": [
                    {
                      "type": "value",
                      "options": {
                        "1": {
                          "text": "UP",
                          "color": "green"
                        },
                        "0": {
                          "text": "DOWN",
                          "color": "red"
                        }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true,
                "instance": true
              },
              "indexByName": {
                "device_name": 0,
                "interface_name": 1,
                "status": 2,
                "speed": 3
              }
            }
          }
        ]
      },
      {
        "id": 12,
        "type": "timeseries",
        "title": "Bandwidth Utilization Percentage Trend",
        "gridPos": {
          "x": 0,
          "y": 36,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "avg(scnms_interface_utilization_percent) by (device_name)",
            "refId": "A",
            "legendFormat": "{{device_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "showPoints": "never",
              "gradientMode": "scheme"
            },
            "color": {
              "mode": "continuous-GrYlRd"
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["mean", "max", "last"]
          }
        }
      }
    ]
}
